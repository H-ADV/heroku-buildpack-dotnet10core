#!/usr/bin/env bash

# bin/compile <build-dir> <cache-dir> <env-dir>

### Configure environment
set -o errexit    # Always exit on error
set -o pipefail   # Don't ignore exit codes when piping output
set -o nounset    # Fail on unset variables

unset GIT_DIR     # Avoid GIT_DIR leak from previous build steps

### Constants
BASE_DIR="$(pwd)"
BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

### Load dependencies
source "$BP_DIR/bin/util/common.sh"
source "$BP_DIR/bin/util/apt_dpkg_install.sh"

export_env_dir "$ENV_DIR"

# Get OS version
herokuos_version="$(get_linux_platform_version)"

print "OS: Ubuntu $herokuos_version"
print "Stack version: ${STACK}"

print "Installing prerequisites for .NET Core on Ubuntu"
if [[ $herokuos_version == "16.04" ]]; then
	apt_install libicu55 openssl1.0
elif [[ $herokuos_version == "18.04" ]]; then
	apt_install libicu60 openssl1.0
elif [[ $herokuos_version == "20.04" ]]; then
	apt_install libicu66 libssl1.1
elif [[ $herokuos_version == "22.04" || $herokuos_version == "24.04" ]]; then
	apt_install apt-transport-https libicu-dev libssl3 libunwind8 libgssapi-krb5-2 libc6 liblttng-ust1
else
	print "Unsupported OS version: $herokuos_version"
	exit 1
fi

# Fix apt-cache permission errors
rm -rf /var/cache/apt/archives/partial/*.deb || true

# Install fallback ICU library if needed
if ! dpkg-query -W libicu-dev &>/dev/null; then
    print "Manually installing libicu70-compatible library"
    curl -O http://security.ubuntu.com/ubuntu/pool/main/i/icu/libicu70_70.1-2ubuntu2_amd64.deb
    dpkg -i libicu70_70.1-2ubuntu2_amd64.deb
    rm libicu70_70.1-2ubuntu2_amd64.deb
fi

# Skip TELEMETRY_OPTOUT on production environment
export DOTNET_SKIP_FIRST_TIME_EXPERIENCE=${DOTNET_SKIP_FIRST_TIME_EXPERIENCE:-1}
export DOTNET_CLI_TELEMETRY_OPTOUT=${DOTNET_CLI_TELEMETRY_OPTOUT:-1}
export ASPNETCORE_ENVIRONMENT=${ASPNETCORE_ENVIRONMENT:-production}

# Find the first .csproj or .sln file in the build directory
PROJECT_FILE=$(find $BUILD_DIR -maxdepth 2 -name "*.csproj" -print -quit)
SOLUTION_FILE=$(find $BUILD_DIR -maxdepth 2 \( -name "*.slnx" -o -name "*.sln" \) -print -quit)

if [[ -z "$PROJECT_FILE" && -z "$SOLUTION_FILE" ]]; then
    print "Error: No project (.csproj) or solution (.sln) file found in the build directory."
    exit 1
fi

# Use the solution file if it exists, otherwise use the project file
TARGET_FILE=${SOLUTION_FILE:-$PROJECT_FILE}
print "Building: $TARGET_FILE"

# Get the directory of the target file
project_dir=$(dirname $TARGET_FILE)
print "The project directory path: ${project_dir}"

# Get netcore framework version
framework_version="$(get_framework_version $project_dir)"
print "The netcore framework version: ${framework_version}"

# Get dotnet runtime version
runtime_framework_version="$(get_specific_version $BUILD_DIR)"
if [[ -z $runtime_framework_version ]]; then	
    runtime_framework_version="$(get_runtime_framework_version $project_dir)"		
fi
print "The dotnet runtime version: ${runtime_framework_version} to be installed"

# Install dotnet
# Default to 10.0 if not detected
if [[ -z "$framework_version" ]]; then
    print "Framework version not detected, defaulting to 10.0"
    framework_version="10.0"
fi

# Construct install arguments
install_args=(--architecture x64 --channel "$framework_version" --install-dir "$BUILD_DIR/.dotnet")

if [[ "$runtime_framework_version" != "Latest" ]]; then
    install_args+=(--version "$runtime_framework_version")
fi

# Install dotnet
"$BP_DIR/bin/util/dotnet-install.sh" "${install_args[@]}"

# Export variables for build-time execution
export DOTNET_ROOT="$BUILD_DIR/.dotnet"
export PATH="$PATH:$DOTNET_ROOT:$DOTNET_ROOT/tools"

# Install dotnet-ef global tool
print "Installing dotnet-ef global tool..."
dotnet tool install dotnet-ef --global --version 9.* || print "dotnet-ef tool install failed or already installed"

# ... (skip to migration part)



# Add symbolic link for dotnet
if [[ $BUILD_DIR != '/app' ]]; then
	# Subsequent buildpacks can still invoke it
	ln -s ${BUILD_DIR}/.dotnet $HOME
fi

# Add dotnet runtime path to environment variable that is available to access dotnet command
export PATH="$PATH:$HOME/.dotnet"

# List installed dotnet runtimes
dotnet --list-runtimes

PROFILE_PATH="$BUILD_DIR/.profile.d/dotnetcore.sh"
mkdir -p $(dirname $PROFILE_PATH)

# Export vars
echo 'export DOTNET_ROOT=$HOME/.dotnet' >> $PROFILE_PATH
echo 'export PATH=$PATH:$DOTNET_ROOT:$DOTNET_ROOT/tools' >> $PROFILE_PATH
echo 'export PATH="$PATH:$HOME/.dotnet:$HOME/.apt/usr/bin"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$HOME/.apt/usr/lib/x86_64-linux-gnu:$HOME/.apt/usr/lib/i386-linux-gnu:$HOME/.apt/usr/lib"' >> $PROFILE_PATH
echo 'export LIBRARY_PATH="$LIBRARY_PATH:$HOME/.apt/usr/lib/x86_64-linux-gnu:$HOME/.apt/usr/lib/i386-linux-gnu:$HOME/.apt/usr/lib"' >> $PROFILE_PATH
echo 'export INCLUDE_PATH="$INCLUDE_PATH:$HOME/.apt/usr/include"' >> $PROFILE_PATH
echo 'export CPATH="$INCLUDE_PATH"' >> $PROFILE_PATH
echo 'export CPPPATH="$INCLUDE_PATH"' >> $PROFILE_PATH
echo "export DOTNET_CLI_TELEMETRY_OPTOUT=1" >> $PROFILE_PATH

# Identify Startup Project and Publish
# 1. Try to find a project with launchSettings.json (usually the executable)
# 2. If not, try to find a .csproj that is not a class library (checking output type or sdk)
# 3. Fallback to TARGET_FILE, but if it is a solution, we must specify a project to publish if there are multiple.

STARTUP_PROJECT=""
LAUNCH_SETTINGS=$(find $BUILD_DIR -name launchSettings.json | head -n 1)

if [[ -n "$LAUNCH_SETTINGS" ]]; then
    STARTUP_PROJECT=$(dirname $(dirname "$LAUNCH_SETTINGS"))
    print "Found launchSettings.json in $STARTUP_PROJECT. Using it as startup project."
else
    # Fallback search for a Web SDK project if possible, or just the first csproj found that isn't the solution dir if different
    # For now, let's look for a csproj ending in .WebAPI or .Service or .App or .Web
    STARTUP_PROJECT=$(find $BUILD_DIR \( -name "*.WebAPI.csproj" -o -name "*.Service.csproj" -o -name "*.App.csproj" -o -name "*.Web.csproj" \) | head -n 1)
    
    if [[ -z "$STARTUP_PROJECT" ]]; then
         # Last resort: Try to find ANY csproj that triggers "Web" SDK or Exe output? Too complex for grep right now.
         # Assume explicitly provided directory structure if known, or fail gracefully.
         if [[ -d "$BUILD_DIR/HADV.OMS.Reports.WebAPI" ]]; then
            STARTUP_PROJECT="$BUILD_DIR/HADV.OMS.Reports.WebAPI"
            print "No explicit startup project detected. Defaulting to known path HADV.OMS.Reports.WebAPI."
         else
            print "Error: Could not determine startup project. Please add a launchSettings.json or ensure a WebAPI project exists."
            exit 1
         fi
    else
         STARTUP_PROJECT=$(dirname "$STARTUP_PROJECT")
         print "Found candidate startup project: $STARTUP_PROJECT"
    fi
fi

PUBLISH_DIR="out"
print "Publishing ${STARTUP_PROJECT} to ${PUBLISH_DIR}..."

# Run publish
dotnet publish "$STARTUP_PROJECT" --output "$BUILD_DIR/$PUBLISH_DIR" --configuration Release

print "Listing publish output directory:"
ls -la "$BUILD_DIR/$PUBLISH_DIR"

# Determine Assembly Name from the .csproj file name in the startup directory
# We re-find the .csproj in the STARTUP_PROJECT directory to be sure.
CSPROJ=$(find "$STARTUP_PROJECT" -maxdepth 1 -name "*.csproj" | head -n 1)
if [[ -n "$CSPROJ" ]]; then
    APP_ASSEMBLY="$(basename "$CSPROJ" .csproj)"
else
    print "Error: Could not find .csproj in $STARTUP_PROJECT to determine assembly name."
    exit 1
fi

print "Detected App Assembly Name: $APP_ASSEMBLY"

# Export vars for release script and runtime
echo "export APP_ASSEMBLY=$APP_ASSEMBLY" >> $PROFILE_PATH
echo "export RELEASE_DIR=$PUBLISH_DIR" >> $PROFILE_PATH

# Run Migrations
print "Running Entity Framework Core Migrations..."

# Find projects
INFRA_PROJECT=$(find $BUILD_DIR -name "*.Infrastructure.csproj" | head -n 1)
WEB_PROJECT=$(find $BUILD_DIR -name "*.WebAPI.csproj" | head -n 1)

if [[ -n "$INFRA_PROJECT" && -n "$WEB_PROJECT" ]]; then
    print "Infrastructure Project: $INFRA_PROJECT"
    print "Web Project: $WEB_PROJECT"
    
    # Run migration
    # Note: We use the installed dotnet and global tool
    # We need to ensure the environment variables for DB connection are present.
    # $ENV_DIR contains files named after env vars. We already exported them via export_env_dir.
    
    dotnet ef database update --project "$INFRA_PROJECT" --startup-project "$WEB_PROJECT" --configuration Release || {
        print "Error: Migration failed."
        exit 1
    }
    print "Migrations completed successfully."
else
    print "Warning: Could not find Infrastructure or WebAPI project. Skipping migrations."
fi
